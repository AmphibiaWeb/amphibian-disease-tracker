{
    "version": "0.0.1",
    "name": "adp_generic_heatmap-v7",
    "auth": {
        "method": "open"
    },
    "placeholders": {
        "color": {
            "type": "css_color",
            "default": "red"
        },
        "table_name": {
            "type": "sql_literal",
            "default": "t2627cbcbb4d7597f444903b2e7a5ce5c_6d6d454828c05e8ceea03c99cc5f5"
        }
    },
    "layergroup": {
        "version": "1.0.1",
        "layers": [
            {
                "type": "cartodb",
                "options": {
                    "cartocss_version": "2.1.1",
                    "cartocss": "#layer { polygon-fill: <%= color %>; marker-fill: red; }",
                    "sql": "select * from <%= table_name %>",
                    "interactivity": ["id", "diseasedetected", "genus", "specificepithet"],
                    "geom_column": "the_geom"
                }
            }
        ]
    }
}
