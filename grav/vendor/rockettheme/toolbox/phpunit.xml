<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">

    <testsuites>
        <testsuite name="RocketTheme Toolbox Test Suite">
            <directory suffix=".php">./ArrayTraits/tests/</directory>
            <directory suffix=".php">./DI/tests/</directory>
            <directory suffix=".php">./Event/tests/</directory>
            <directory suffix=".php">./File/tests/</directory>
            <directory suffix=".php">./ResourceLocator/tests/</directory>
            <directory suffix=".php">./Session/tests/</directory>
            <directory suffix=".php">./StreamWrapper/tests/</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-text" target="php://stdout" title="RocketTheme\Toolbox" charset="UTF-8" yui="true" highlight="true" lowUpperBound="50" highLowerBound="90"/>
        <log type="coverage-html" target="coverage/html" title="RocketTheme\Toolbox"/>
        <log type="coverage-clover" target="coverage/clover/report.xml" title="RocketTheme\Toolbox"/>
    </logging>
</phpunit>
